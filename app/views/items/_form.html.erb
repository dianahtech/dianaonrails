  <div class="field">
    <%= form.label :weight %>
    <%= form.text_field :weight,class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :value %>
    <%= form.text_field :value,class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :available %>
    <%= form.check_box :available %>
  </div>

  <div class="field">
    <%= form.label :durl %>
    <%= form.text_field :durl, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :ean %>
    <%= form.text_field :ean, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :offer %>
    <%= form.check_box :offer%>
  </div>

  <div class="field">
    <%= form.label :buy_limit %>
    <%= form.number_field :buy_limit, class:"form-control"  %>
  </div> 

   <div class="field">
    <%= form.label :section %>
    <%= form.text_field :section, class:"form-control"  %>
  </div>

    <div class="field form-group">   
